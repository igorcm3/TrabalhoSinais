function gravar = GravaSom(Fs, nBits, nChannels, ID, tempoGravacao)
recObj = audiorecorder(Fs,nBits,nChannels,ID);

disp('Start speaking.')
recordblocking(recObj,tempoGravacao );
for i=0:tempoGravacao
 disp('Gravando...'+i)
end;
disp('End of Recording.');
gravar = recObj;
%gravar = play(recObj);
end